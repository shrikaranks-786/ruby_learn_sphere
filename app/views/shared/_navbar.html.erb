<header class="header">
  <div class="header-pattern"></div>

  <!-- Desktop Header -->
  <div class="desktop-header">
    <div class="header-content">
      <!-- Navigation Menu -->
      <nav class="nav-menu">
        <%= link_to root_path, class: "nav-link" do %>
          Courses
        <% end %>
        <%= link_to chatbot_path, class: "nav-link" do %>
          AI Assistant
        <% end %>
      </nav>

      <!-- Logo -->
      <%= link_to root_path, class: "logo-link" do %>
        <%= image_tag "logo.png", class: "logo", alt: "Logo" %>
      <% end %>

      <!-- Dropdown Menu -->
      <div class="dropdown">
        <button class="dropbtn">Users</button>
        <div class="dropdown-content">
          <% if admin_signed_in? && user_signed_in? %>
            <%= link_to "User Page", new_user_session_path, class: "dropdown-item" %>
            <%= link_to "Admin page", new_admin_session_path, class: "dropdown-item" %>
          <% elsif user_signed_in? %>
            <%= button_to "Sign Out", destroy_user_session_path, method: :delete, class: "dropdown-item", data: { turbo_confirm: "Are you sure you want to sign out?" } %>
            <%= link_to "Admin Login", new_admin_session_path, class: "dropdown-item" %>
          <% elsif admin_signed_in? %>
            <%= button_to "Sign Out", destroy_admin_session_path, method: :delete, class: "dropdown-item", data: { turbo_confirm: "Are you sure you want to sign out?" } %>
            <%= link_to "User Login", new_user_session_path, class: "dropdown-item" %>
          <% else %>
            <%= link_to "User Login", new_user_session_path, class: "dropdown-item" %>
            <%= link_to "Admin Login", new_admin_session_path, class: "dropdown-item" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</header>

<style>
  .header {
    background-image: linear-gradient(to right, #9333ea, #ec4899, #ef4444);
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
    position: relative;
    padding: 1rem 1.5rem;
  }

  .header-pattern {
    position: absolute;
    inset: 0;
    background-image: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.4'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
    opacity: 0.1;
  }

  .header-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: relative;
    z-index: 10;
  }

  .nav-menu {
    display: flex;
    align-items: center;
  }

  .nav-link {
    color: white;
    font-weight: bold;
    font-size: 1.25rem;
    margin-right: 1.5rem;
    transition: color 0.3s, transform 0.3s;
  }

  .nav-link:hover {
    color: #fde047;
    transform: scale(1.05);
  }

  .logo-link {
    flex-shrink: 0;
    transition: transform 0.3s;
  }

  .logo {
    height: 3rem; /* Adjusted size */
    width: auto;
    filter: drop-shadow(0 10px 8px rgb(0 0 0 / 0.04)) drop-shadow(0 4px 3px rgb(0 0 0 / 0.1));
  }

  .dropdown {
    position: relative;
    display: inline-block;
  }

  .dropbtn {
    background-color: #facc15;
    color: #6b21a8;
    padding: 0.5rem 1rem;
    font-size: 1rem;
    font-weight: bold;
    border: none;
    cursor: pointer;
    border-radius: 9999px;
    transition: all 0.3s;
  }

  .dropbtn:hover {
    background-color: #fde047;
    transform: scale(1.05);
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
  }

  .dropdown-content {
    display: none;
    position: absolute;
    right: 0;
    background-color: #f9f9f9;
    min-width: 160px;
    box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
    z-index: 1;
    border-radius: 0.5rem;
    overflow: hidden;
    margin-top: 2px;
  }

  .dropdown-content .dropdown-item {
    width: 100%;
    color: #6b21a8;
    padding: 12px 16px;
    text-decoration: none;
    display: block;
    font-weight: bold;
    text-align: center;
    transition: background-color 0.3s;
  }

  .dropdown-content .dropdown-item:hover {
    background-color: #fde047;
  }

  .dropdown:hover .dropdown-content {
    display: block;
  }
</style>
