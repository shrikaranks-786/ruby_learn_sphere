<header class="bg-gradient-to-r from-purple-600 via-pink-500 to-red-500 shadow-lg relative">
  <div class="absolute inset-0 bg-pattern opacity-10"></div>
  
  <!-- Desktop Header -->
  <div class="hidden sm:block container mx-auto px-6 py-4 relative z-10">
    <div class="flex justify-between items-center">
      <nav class="flex items-center space-x-6">
        <%= link_to root_path, class: "text-white font-bold text-xl hover:text-yellow-300 transition-colors duration-300 transform hover:scale-105" do %>
          Courses
        <% end %>
        <%= link_to chatbot_path, class: "text-white font-bold text-xl hover:text-yellow-300 transition-colors duration-300 transform hover:scale-105" do %>
          Ai assitant
        <% end %>
      </nav>
      

      <%= link_to root_path, class: "flex-shrink-0 transition-transform duration-300 ease-in-out transform hover:scale-110" do %>
        <%= image_tag "logo.png", class: "h-14 w-auto filter drop-shadow-lg", alt: "Logo" %>
      <% end %>
      
      <div class="flex items-center space-x-6">
        <% if user_signed_in? %>
          <%= button_to destroy_user_session_path, method: :delete, class: "bg-yellow-400 hover:bg-yellow-300 text-purple-800 font-bold py-2 px-6 rounded-full transition-all duration-300 ease-in-out transform hover:scale-105 hover:shadow-lg", data: { turbo_confirm: "Are you sure you want to sign out?" } do %>
            Sign Out
          <% end %>
          <%= link_to edit_user_registration_path, class: "text-white hover:text-yellow-300 transition-colors duration-300 transform hover:scale-110" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5.121 17.804A13.937 13.937 0 0112 16c2.5 0 4.847.655 6.879 1.804M15 10a3 3 0 11-6 0 3 3 0 016 0zm6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          <% end %>
        <% else %>
          <%= link_to "Sign In", new_user_session_path, class: "bg-yellow-400 hover:bg-yellow-300 text-purple-800 font-bold py-2 px-6 rounded-full transition-all duration-300 ease-in-out transform hover:scale-105 hover:shadow-lg" %>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Mobile Header -->
  <div class="sm:hidden relative z-10">
    <div class="px-4 py-3 flex justify-between items-center">
      <%= link_to root_path, class: "transition-transform duration-300 ease-in-out transform hover:scale-110" do %>
        <%= image_tag "logo.png", class: "h-12 w-auto filter drop-shadow-lg", alt: "Logo" %>
      <% end %>
      
      <button id="mobile-menu-button" class="text-white hover:text-yellow-300 transition-colors duration-300 focus:outline-none transform hover:scale-110" aria-label="Toggle menu">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>

    <div id="mobile-menu" class="hidden px-4 pt-2 pb-4 bg-purple-800 rounded-b-2xl shadow-lg">
      <div class="flex flex-col space-y-3">
        <%= link_to "Courses", root_path, class: "block py-2 text-lg font-bold text-white hover:text-yellow-300 transition-colors duration-300" %>
        <% if user_signed_in? %>
          <%= button_to "Sign Out", destroy_user_session_path, method: :delete, class: "block w-full text-left py-2 text-lg font-bold text-white hover:text-yellow-300 transition-colors duration-300", data: { turbo_confirm: "Are you sure you want to sign out?" } %>
          <%= link_to edit_user_registration_path, class: "block py-2 text-lg font-bold text-white hover:text-yellow-300 transition-colors duration-300" do %>
            <span class="flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5.121 17.804A13.937 13.937 0 0112 16c2.5 0 4.847.655 6.879 1.804M15 10a3 3 0 11-6 0 3 3 0 016 0zm6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span>Profile</span>
            </span>
          <% end %>
        <% else %>
          <%= link_to "Sign In", new_user_session_path, class: "block py-2 text-lg font-bold text-white hover:text-yellow-300 transition-colors duration-300" %>
        <% end %>
      </div>
    </div>
  </div>
</header>

<style>
  .bg-pattern {
    background-image: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.4'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
  }
</style>

<script>
  document.addEventListener('turbo:load', function() {
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');

    if (mobileMenuButton && mobileMenu) {
      mobileMenuButton.addEventListener('click', function() {
        mobileMenu.classList.toggle('hidden');
      });
    }
  });
</script>

