<div class="chat-input">
  <%= form_with model: new_question, url: chatbot_path, local: false do |form| %>
    <%= form.text_field :question, 
                        required: true, 
                        placeholder: "Type your message here...", 
                        autocomplete: "off" %>
    <%= form.submit "Send" %>
  <% end %>
</div>

<style>
  .chat-input form {
    display: flex;
    align-items: center;
  }

  .chat-input input[type="text"] {
    flex-grow: 1;
    padding: 12px 15px;
    border: 1px solid #ccc;
    border-radius: 25px;
    font-size: 16px;
    outline: none;
    transition: border-color 0.3s;
  }

  .chat-input input[type="text"]:focus {
    border-color: #4a90e2;
  }

  .chat-input input[type="submit"] {
    background-color: #4a90e2;
    color: white;
    border: none;
    padding: 12px 20px;
    margin-left: 10px;
    border-radius: 25px;
    cursor: pointer;
    font-size: 16px;
    transition: background-color 0.3s;
  }

  .chat-input input[type="submit"]:hover {
    background-color: #3a7bc8;
  }
</style>

