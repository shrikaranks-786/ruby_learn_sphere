<%# app/views/chatbots/chatbot.html.erb %>
<div style="max-width: 600px; margin: 20px auto; font-family: Arial, sans-serif;">

  <h1 style="font-size: 24px; font-weight: bold; text-align: center; margin-bottom: 20px;">Chatbot</h1>

  <!-- Chat History -->
  <div id="chat-container" style="max-height: 400px; overflow-y: auto; padding: 10px; border: 1px solid #ccc; margin-bottom: 20px; border-radius: 5px;">
    <% @chatbots.each do |chat| %>
      <div style="margin-bottom: 15px; padding: 10px; border: 1px solid #ddd; border-radius: 5px;">
        <p style="color: blue; font-weight: bold;">You:</p>
        <p style="margin-bottom: 5px;"><%= chat.question %></p>
        <p style="color: green; font-weight: bold;">Bot:</p>
        <p><%= chat.answer %></p>
      </div>
    <% end %>
  </div>

  <!-- Question Form -->
  <%= render 'chatbots/form', new_question: @new_question %>

</div>
