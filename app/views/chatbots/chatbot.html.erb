<div class="chatbot-container">
  <div class="chat-header">
    <h1>AI Assistant</h1>
  </div>

  <div class="chat-messages" id="chat-container">
    <% @chatbots.each do |chat| %>
      <div class="message user-message">
        <div class="message-content"><%= chat.question %></div>
      </div>
      <% if chat.answer.present? %>
        <div class="message bot-message">
          <div class="message-content"><%= chat.answer %></div>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="chat-input">
    <%= render 'chatbots/form', new_question: @new_question %>
  </div>
</div>

<style>
  .chatbot-container {
    max-width: 800px;
    margin: 20px auto;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background-color: #f5f5f5;
    border-radius: 10px;
    box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
    overflow: hidden;
  }

  .chat-header {
    background-color: #4a90e2;
    color: white;
    padding: 20px;
    text-align: center;
  }

  .chat-header h1 {
    margin: 0;
    font-size: 24px;
    font-weight: 500;
  }

  .chat-messages {
    height: 400px;
    overflow-y: auto;
    padding: 20px;
    background-color: white;
  }

  .message {
    margin-bottom: 15px;
    max-width: 80%;
    clear: both;
  }

  .user-message {
    float: right;
  }

  .bot-message {
    float: left;
  }

  .message-content {
    padding: 10px 15px;
    border-radius: 18px;
    display: inline-block;
  }

  .user-message .message-content {
    background-color: #4a90e2;
    color: white;
  }

  .bot-message .message-content {
    background-color: #e9e9eb;
    color: #333;
  }

  .chat-input {
    padding: 20px;
    background-color: white;
  }
</style>
